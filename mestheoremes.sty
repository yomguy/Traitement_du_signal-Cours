\usepackage{amsthm}

\newtheoremstyle{note}  % nom
{16pt} % espace avant
{8pt} % espace après
{\itshape} % body font
{} % Indent amount (empty = no indent, \parindent = para indent)
{\bfseries} % note head font
{~:} % punctuation après note head
{ } % espace après note head " " = normal interword space ; \newline = linebreak
{} % note head spec (can be left empty, meaning 'normal')

\theoremstyle{note}
\newtheorem{note}{Note}

\newtheoremstyle{break}
{16pt} 	% espace avant
