{}		% indent amount (empty=no indent,\parindent=para indent)
{\bfseries}	% break header font
{~:}	% ponctuation
{ }	% Space après head : \newline = \linebreak
{}		% break head spec

\theoremstyle{break}
\newtheorem*{bnotes}{Notes}
\newtheorem{bex}{Exemple}
\newtheorem*{brems}{Remarques}
